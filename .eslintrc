{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
		"max-len": "off",
    "no-console": "warn",
    "linebreak-style": "off",
    "react/no-unescaped-entities": "off",
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off",
		"prefer-template": "off",
		"arrow-parens": "off",
		"no-shadow": "off",
    "react/prop-types": "warn",
    "no-nested-ternary": "off",
    "no-bitwise": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "env": {
    "jest": true,
    "browser": true,
    "node": true
  }
}
